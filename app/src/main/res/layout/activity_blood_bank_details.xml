<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="smartindia.santas.bloodrelations.activities.BloodBankDetailsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/app_padding"
                android:paddingLeft="@dimen/app_padding"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bbName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blood_bank_name"
                        android:textSize="30dp"
                        android:layout_gravity="center" />
                    <TextView
                        android:id="@+id/bbLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:textSize="20dp"
                        android:layout_gravity="center"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="3"
                        android:columnCount="8"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/whole_blood_wb"
                            android:layout_columnSpan="8"
                            android:gravity="center_horizontal"
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:background="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/opositive"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/onegative"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A+"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A-"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B+"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B-"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AB+"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AB-"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/white"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="1dp"
                            android:gravity="center_horizontal"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/opos"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/black"
                            android:background="@color/red"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/oneg"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/black"
                            android:background="@color/red"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/apos"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/black"
                            android:background="@color/red"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/aneg"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/black"
                            android:background="@color/red"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bpos"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/black"
                            android:background="@color/red"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bneg"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/black"
                            android:background="@color/red"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/abpos"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/black"
                            android:background="@color/red"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/abneg"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:textColor="@color/black"
                            android:background="@color/red"
                            android:layout_marginTop="1dp"
                            android:gravity="center_horizontal"/>
                    </GridLayout>

                </LinearLayout>
                


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bloodGroupTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blood_group"
                        android:textSize="20dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner" />


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <android.support.design.widget.TextInputEditText
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/quantity"
                                android:id="@+id/bloodQuantity"
                                android:inputType="number"
                                android:textSize="20dp" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/submitBloodQuantity"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/submit"
                        android:onClick="update_blood_details"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorPrimaryDark"/>

                </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_marginBottom="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/app_padding">

            <TextView
                android:id="@+id/blood_bank_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blood_bank_name"
                android:textSize="22sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/blood_bank_location_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/blood_bank_location"/>

            <TextView
                android:id="@+id/blood_bank_phone_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/blood_bank_phone"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
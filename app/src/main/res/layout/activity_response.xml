<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="smartindia.santas.bloodrelations.activities.ResponseActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can you make it to the Bloodbank?"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:id="@+id/yes_going"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/yes_rb"/>

        <Button
            android:layout_width="0dp"
            android:id="@+id/not_going"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/no_rb"/>

    </LinearLayout>

</LinearLayout>
